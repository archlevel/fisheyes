<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="black_16_txt2">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="textView_back">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/back_nav_item</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="title_txt">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#8d5a14</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_opt">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:text">@string/ok_btn</item>
    </style>

    <style name="user_cell_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/user_txt</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="line_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/cloud_item_divider</item>
    </style>

    <style name="recordvideo_theme" parent="android:Theme">
        <item name="android:windowTitleSize">54dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/athome_title_bg</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    <style name="home_theme" parent="@style/android:Theme.Light">
        <item name="android:windowTitleSize">54dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/athome_title_bg</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="athome_title_bg">
        <item name="android:background">@drawable/trans</item>
    </style>

    <style name="AppTheme" parent="MyThemeBlue"></style>

    <!-- 蓝色为主色调 -->
    <style name="MyThemeBlue" parent="@style/android:Theme.Light">

        <!--         选中状态icon的颜色和字体颜色 -->
        <!--         <item name="colorPrimary">@color/main_blue_light</item> -->
        <!--         <item name="colorPrimaryDark">@color/main_blue_dark</item> -->
        <!--         <item name="colorAccent">@color/main_blue_light</item> -->
        <!--         正常状态下字体颜色和icon颜色 -->
        <!--         <item name="android:textColorPrimary">@color/main_white</item> -->


        <!--选中状态icon的颜色和字体颜色-->
        <!--         <item name="android:colorPrimary">@color/athome_title</item> -->
        <!--         <item name="android:colorPrimaryDark">@color/athome_title</item> -->
        <!--   <item name="colorAccent">@color/athome_title</item>-->
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>


    <style name="login_btn">
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp_18</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
    </style>

    <style name="toggleButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/athome_switchview</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:checked">true</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>
</resources>